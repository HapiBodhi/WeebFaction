<?xml version="1.0" encoding="utf-8" ?>
<Patch> <!--Checks if Coom is installed, and if so make pawns spawn with coom instead of milk-->
<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Coom</li>
    </mods>
    <match Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>Defs/PawnKindDef[invFoodDef="Milk"]</xpath>
                <value>
                    <inventoryOptions>
                        <subOptionsChooseOne>
                            <li>
                                <thingDef>Coom</thingDef>
                                <countRange>1</countRange>
                            </li>
                        </subOptionsChooseOne>
                    </inventoryOptions>
                </value>
            </li>
            <li Class="PatchOperationRemove">
                <xpath>Defs/PawnKindDef[invFoodDef="Milk"]/invFoodDef</xpath>
            </li>
        </operations>
    </match>     
</Operation>
</Patch>